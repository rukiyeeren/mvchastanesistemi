@model MVCHASTANE.Models.Entity.tbl_randevu
@{
    ViewBag.Title = "Yenirandevu";
    Layout = "~/Views/Shared/mainlayout.cshtml";
}
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<form class="form-group" method="post">
    @using (Html.BeginForm("Yenirandevu", "Randevu", FormMethod.Post))
    {


        <h4>e-randevu oluştur</h4>
        <div>
            <label>ADINIZ VE SOYADINIZ</label>

            @Html.TextBoxFor(m => m.randevuadsoyad, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.randevuadsoyad, "", new { @style = "color:blue" })

            <label>TCNO</label>
            @Html.TextBoxFor(m => m.randevutcno, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.randevutcno, "", new { @style = "color:blue" })

            <label>TELEFON</label>
            @Html.TextBoxFor(m => m.randevutel, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.randevutel, "", new { @style = "color:blue" })

            <label>DOKTOR</label>
            @Html.DropDownListFor(m => m.tbl_doktor.doktorid, (List<SelectListItem>)ViewBag.dok, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.tbl_doktor.doktorid, "", new { @style = "color:blue" })

            <label>BÖLÜM</label>
            @Html.DropDownListFor(m => m.tbl_bolum.bolumid, (List<SelectListItem>)ViewBag.blm, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.tbl_bolum.bolumid, "", new { @style = "color:blue" })

            <label>TARİH VE SAAT</label>
            @Html.TextBoxFor(m => m.randevutarihsaat, new { @class = "form-control",type= "datetime-local" })
            @Html.ValidationMessageFor(m => m.randevutarihsaat, "", new { @style = "color:blue" })



            <div style="margin-top:15px">
                <button id="btn1" class="btn btn-info">Randevu Oluştur</button>
            </div>

        </div>
    }
</form>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
        $("#btn1").click(function () {
            alert("Tebrikler! Randevunuz oluşmuştur");
        })
</script>
